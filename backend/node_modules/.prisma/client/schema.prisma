// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hostel {
  id                 String   @id @default(uuid())
  registrationNumber String   @unique @map("registration_number")
  name               String
  address            String?
  phone              String?
  email              String?
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Relations
  users             User[]
  expenses          Expense[]
  deposits          Deposit[]
  dailyCalculations DailyCalculation[]

  @@map("hostels")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  password        String
  name            String
  role            UserRole  @default(USER)
  hostelId        String    @map("hostel_id")
  otp             String? // Store OTP temporarily
  otpExpiry       DateTime? @map("otp_expiry") // OTP expiration time
  isEmailVerified Boolean   @default(false) @map("is_email_verified")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  hostel   Hostel    @relation(fields: [hostelId], references: [id], onDelete: Cascade)
  expenses Expense[]
  deposits Deposit[]

  @@map("users")
}

model Expense {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String
  category    String
  date        DateTime @db.Date
  userId      String   @map("user_id")
  hostelId    String   @map("hostel_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  hostel Hostel @relation(fields: [hostelId], references: [id], onDelete: Cascade)

  @@index([hostelId, date])
  @@map("expenses")
}

model Deposit {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String
  date        DateTime @db.Date
  userId      String   @map("user_id")
  hostelId    String   @map("hostel_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  hostel Hostel @relation(fields: [hostelId], references: [id], onDelete: Cascade)

  @@index([hostelId, date])
  @@map("deposits")
}

model DailyCalculation {
  id            String   @id @default(uuid())
  date          DateTime @db.Date
  totalExpenses Decimal  @map("total_expenses") @db.Decimal(10, 2)
  totalDeposits Decimal  @map("total_deposits") @db.Decimal(10, 2)
  netBalance    Decimal  @map("net_balance") @db.Decimal(10, 2)
  hostelId      String   @map("hostel_id")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  hostel Hostel @relation(fields: [hostelId], references: [id], onDelete: Cascade)

  @@unique([hostelId, date])
  @@index([hostelId, date])
  @@map("daily_calculations")
}

enum UserRole {
  ADMIN
  USER
  MANAGER
}
